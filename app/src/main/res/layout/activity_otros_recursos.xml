<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.acsapp.otrosrecuros.OtrosRecursosActivity"
    tools:layout_editor_absoluteY="25dp">

    <include layout="@layout/toolbar"/>
    <Button
        android:id="@+id/btn_motivaciones"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:layout_marginTop="214dp"
        android:text="@string/titulo_mensaes_motivacionales"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_historias"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="@+id/btn_motivaciones"
        app:layout_constraintTop_toBottomOf="@+id/btn_motivaciones"
        android:text="Historias Inspiradoras" />

    <Button
        android:id="@+id/btn_otracosa"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Otra cosa"
        app:layout_constraintStart_toStartOf="@+id/btn_historias"
        app:layout_constraintTop_toBottomOf="@+id/btn_historias" />

</android.support.constraint.ConstraintLayout>
