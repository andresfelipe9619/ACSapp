<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.acsapp.contactos.ContactoFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/foto_amigo1"
            android:layout_width="164dp"
            android:layout_height="129dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_account_circle_black" />

        <ImageView
            android:id="@+id/foto_amigo2"
            android:layout_width="164dp"
            android:layout_height="129dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/foto_amigo3"
            app:layout_constraintHorizontal_bias="0.222"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foto_amigo1"
            app:layout_constraintVertical_bias="0.049"
            app:srcCompat="@drawable/ic_account_circle_black" />

        <ImageView
            android:id="@+id/foto_amigo3"
            android:layout_width="164dp"
            android:layout_height="129dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foto_amigo1"
            app:layout_constraintVertical_bias="0.049"
            app:srcCompat="@drawable/ic_account_circle_black" />

        <TextView
            android:id="@+id/name_amigo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/foto_amigo1"
            app:layout_constraintStart_toStartOf="@+id/foto_amigo1"
            app:layout_constraintTop_toBottomOf="@+id/foto_amigo1" />

        <TextView
            android:id="@+id/name_amigo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/foto_amigo2"
            app:layout_constraintStart_toStartOf="@+id/foto_amigo2"
            app:layout_constraintTop_toBottomOf="@+id/foto_amigo2" />

        <TextView
            android:id="@+id/name_amigo3"
            android:layout_width="49dp"
            android:layout_height="19dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/foto_amigo3"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/foto_amigo3"
            app:layout_constraintTop_toBottomOf="@+id/foto_amigo3" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
